alunos = int(input("Quantos alunos você quer estudar? "))
numero_alunos = []
altura_alunos = []
for i in range (1, alunos + 1, 1):
    print (f"Olá aluno nº {i}")
    altura_alunos.append (float(input("Qual sua altura? ")))
baixo = altura_alunos.index(min(altura_alunos)) + 1
alto = altura_alunos.index(max(altura_alunos)) + 1
print (f"O aluno mais baixo é: nº {baixo}. Sua altura é: {min(altura_alunos)}m")
print (f"O aluno mais alto é: n º{alto}. Sua altura é:  {max(altura_alunos)}m")
