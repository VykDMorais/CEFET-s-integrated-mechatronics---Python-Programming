https://github.com/go4Mor4/Exericios-resolvidos_Estrutura-de-repeticao/blob/master/Lista3_37.py

codigo = 0
cliente = []
altura_c = []
peso_c = []
num_c = 1
cont = 0
while (True):
    print (f"Olá cliente nº {num_c}")
    codigo = int(input("Qual seu código? "))
    if codigo == 0:
        break
    else:
        altura = float(input("Qual sua altura? "))
        peso = float(input("Qual seu peso? "))
        cliente.append(codigo)
        altura_c.append(altura)
        peso_c.append(peso)
        num_c += 1
gordo = peso_c [0]
magro = peso_c [0]
alto = altura_c [0]
baixo = altura_c [0]
while cont < num_c:
    if peso_c[cont] > gordo:
        gordo = peso_c[cont]
    elif peso_c[cont] < magro:
        magro = peso_c[cont]
    elif altura_c[cont] > alto:
        alto = altura_c[cont] 
    elif altura_c[cont] < baixo:
        baixo = altura_c[cont]     
    cont = cont + 1

print (f"Cliente mais gordo: {gordo}. O código dele é ")
print (f"Cliente mais magro: {magro}. O código dele é ")
print (f"Cliente mais alto: {alto}. O código dele é ")
print (f"Cliente mais baixo: {baixo}. O código dele é ")
print("Média de altura: ", sum(altura_c) / len(altura_c))
print("Média de peso: ", sum(peso_c) / len(peso_c))
